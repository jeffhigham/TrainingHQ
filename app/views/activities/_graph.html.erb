</div>
<br/>

<div id="power_gauge" class="gauge"></div>
<div id="power_zone_gauge" class="gauge"></div>
<div id="watts_kg_gauge" class="gauge"></div>
<div id="hr_gauge" class="gauge"></div>
<div id="hr_zone_gauge" class="gauge"></div>
<div id="cadence_gauge" class="gauge"></div>
<div id="alt_gauge" class="gauge"></div>
<div id="percent_grade_gauge" class="gauge"></div>
<div id="speed_gauge" class="gauge"></div>
<br/>
<hr style="background-color:#333"/>


<div id="chart_labels"></div>
<div id="chart_xvalues"></div>
<div id="chart_canvas" style="height:250px; background-color:#000; color:#666"></div>
<br/>

<div id="time_distance" style="display:inline; float:right">
	<input type="radio" id="time_radio" name="time_distance" onchange="selectTimeDistance()" checked="checked"><label for="time_radio">Time</label>
	<input type="radio" id="distance_radio" name="time_distance" onchange="selectTimeDistance()"><label for="distance_radio">Distance</label>
</div>

<div id="scale_best_fit">
	<input type="radio" id="standard_view" name="scale_best_fit" onchange="drawDyGraph(activity.datafile.scale_best_fit('performance'))" checked="checked"><label for="standard_view">Standard View</label>
	<input type="radio" id="detail_view" name="scale_best_fit" onchange="drawDyGraph(activity.datafile.scale_best_fit('detail'))"><label for="detail_view">Detail View</label>
	<input type="radio" id="full_view" name="scale_best_fit" onchange="drawDyGraph(activity.datafile.scale_best_fit('full'))"><label for="full_view">Full View (Slow)</label>
</div>
</br>
<hr style="background-color:#333"/>


<div class="map_container"> 
  <div id="map" class="gmaps4rails_map"></div>
</div>
