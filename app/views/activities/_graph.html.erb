<script src="//maps.google.com/maps/api/js?v=3.8&amp;sensor=false&amp;client=&amp;key=&amp;libraries=geometry&amp;language=&amp;hl=&amp;region=" type="text/javascript"></script>
<script src="<%= graph_data_path(@activity) %>.js"></script>
<div>

<input id="0" class="css-checkbox" type="checkbox" onchange="toggleCheck(this)" />
<label for="0" class="css-label" style="color:#FF9900" id="power_label">Power</label>

<input id="1" class="css-checkbox" type="checkbox" onchange="toggleCheck(this)" />
<label for="1" class="css-label" style="color:#ff5600" id="hr_label">Heart Rate</label>

<input id="2" class="css-checkbox" type="checkbox" onchange="toggleCheck(this)" />
<label for="2" class="css-label" style="color:#0f8bff" id="cadence_label">Cadence</label>

<input id="3" class="css-checkbox" type="checkbox" onchange="toggleCheck(this)" />
<label for="3" class="css-label" style="color:#7fff00" id="alt_label">Altitude</label>

<input id="4" class="css-checkbox" type="checkbox" onchange="toggleCheck(this)" />
<label for="4" class="css-label" style="color:#bc65f7" id="speed_label">Speed</label>

