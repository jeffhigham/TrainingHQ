<select name="lap_dataset" id="lap_dataset_option" onchange="handleLaps()" style="float: right">
		<option value="all" selected><%= "All Laps" %></option>
	<% @activity.laps.each_with_index do |lap, lap_number| %>
		<option value="<%= lap_number %>"><%= "Lap #{lap_number} (#{lap.start_time})" %></option>
	<% end %>
</select>

