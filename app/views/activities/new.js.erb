$('#new_activity_form').html("<%=j render 'ajax_form' %>");

$("html, body").animate({ scrollTop: $(document).height() }, 1000);

$('#new_activity_button').attr('value', 'Cancel New Activity');

$('#new_activity_button').closest('form')[0].setAttribute('action', '/cancel_new_activity');

$('#new_activity_form').css({'background-color':'lightgreen'}).
  animate({'background-color':'#FFFFFF'}, 2000);

$('#new_activity_button').	
	effect("pulsate", { times:2 }, 2000).
	css({'background-color':'lightgreen'}).
	animate({'background-color':'#FFFFFF'}, 2000);