<!DOCTYPE html>
<html>
<head>
  <title>TrainingHQ</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<h1>TrainingHQ Rails Application</h2>
	<br/>
<nav id="main_nav" style="background:lightblue">
  <% if current_user %>
    <%= link_to "User Profile", user_path(current_user) %>
    <%= link_to "Activities", activities_path %>
    <%= link_to "Log Out", logout_path %>
  <% else %>
    <%= link_to "Sign up", signup_path %> or
    <%= link_to "log in", login_path %>
  <% end %>
</nav>



<br/>
<% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
<% end %>
<%= yield %>
<%= yield :scripts %>

<%=  
if Rails.env.development?
  #debug(params)
  #debug(session) 
  #debug(current_user) 
end
%>


</body>
</html>
